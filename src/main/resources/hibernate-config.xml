<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/projectManagerCourse?createDatabaseIfNotExist=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">nghia12345</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>

        <!-- QUAN TRỌNG: cấu hình quản lý session theo thread -->
        <property name="hibernate.current_session_context_class">thread</property>

        <!-- declare entity -->
        <mapping class="com.example.project.entity.Student"/>
        <mapping class="com.example.project.entity.Course"/>
        <mapping class="com.example.project.entity.Enrollment"/>
    </session-factory>
</hibernate-configuration>